<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_slidingmenu_left">
    <!--登陆样式的设置-->
    <RelativeLayout
        android:id="@+id/relativelayout_unlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp">

        <ImageView
            android:id="@+id/imageView1_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/biz_pc_main_info_profile_avatar_bg_dark"/>

        <TextView
            android:id="@+id/textView1_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView1_right"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:text="立即登录"
            android:textColor="#ffffff"
            android:textSize="25sp"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/buttom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingBottom="150dp">

        <TextView
            android:id="@+id/updata_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="更新版本"
            android:textColor="#FFF"
            android:textSize="25sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/share_little_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fun_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/fun_share_weixin"
                />

            <ImageView
                android:id="@+id/fun_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/addimport_qq"
                />

            <ImageView
                android:id="@+id/fun_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/fun_share_friends"
                />

            <ImageView
                android:id="@+id/fun_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/fun_share_weibo"
                />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativelayout_logined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:visibility="gone">

        <ImageView
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/biz_pc_main_info_profile_avatar_bg_dark"
            android:id="@+id/imageView_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textView_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_photo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:text="喵喵喵"
            android:textColor="#ffffffff"
            android:textSize="25sp" />
    </RelativeLayout>
</RelativeLayout>
