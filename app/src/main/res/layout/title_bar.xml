<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/title_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <ImageButton
        android:id="@+id/title_home"
        android:layout_centerVertical="true"
        android:layout_width="40sp"
        android:background="@drawable/ic_title_home_default"
        android:layout_height="40sp"/>
    <ImageButton
        android:src="@drawable/bar_divider"
        android:id="@+id/title_decider"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/title_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@id/title_decider"
        android:text="新闻"
        android:textSize="23sp"
        android:textColor="#fff"
        />
    <TextView
        android:id="@+id/title_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="3dip"
        android:text="yichang"
        android:textColor="#fff"
        android:textSize="20sp"
        android:visibility="gone"
        />
    <ImageButton
        android:id="@+id/title_share"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_title_share_default"
        android:layout_width="40sp"
        android:layout_height="40sp"/>
</RelativeLayout>
